<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/person_imv_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:contentDescription="@null"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:src="@mipmap/ic_launcher_round"/>
    <TextView
            android:id="@+id/name_tv_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/person_imv_item"
            android:text="张三"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="@+id/person_imv_item"/>
    <TextView
            android:id="@+id/gender_tv_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别：nan"
            android:textSize="15sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@+id/name_tv_item"
            app:layout_constraintBottom_toBottomOf="@+id/person_imv_item"
            app:layout_constraintLeft_toRightOf="@+id/person_imv_item"/>

</android.support.constraint.ConstraintLayout>